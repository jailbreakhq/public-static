    // CSS
    +targethtml('dev')
      link(rel='stylesheet', href='/build/styles/iframe.css')

    +targethtml('qa || prod')
      link(rel='stylesheet', href='//builds.jailbreakhq.org/{{build}}/dist/styles/iframe.css')

    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')

    // JS
    include helpers/iframe-jsconfig.jade

    +targethtml('dev')
      script(src='/components/requirejs/require.js')  
      script.
        require(['/build/scripts/common.js'], function (common) {
          require(['iframe']);
        });

    +targethtml('qa || prod')
      script(src='//builds.jailbreakhq.org/{{build}}/dist/scripts/require.js')
      script(src='//builds.jailbreakhq.org/{{build}}/dist/scripts/iframe.js')

